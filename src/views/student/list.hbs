<div class="container p-4">
  {{#if list}}
  <table class="table table-hover mx-auto shadow caption-top">
  <caption>Listado de estudiantes</caption>
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Puntos</th>
    </tr>
  </thead>
  <tbody>
    {{#each list}}
    <tr>
      <th scope="row">{{math @index "+" 1}}</th>
      <td>{{nombre}}</td>
      <td>{{apellido}}</td>
      <td>{{puntos}}</td>
    </tr>
    {{/each}}
  </tbody>
  </table>
  {{else}}
  <div class="card shadow">
    <div class="card-body">
      <h5 class="card-title">No hay estudiantes registrados...</h5>
    </div>
  </div>
  {{/if}}
</div>
